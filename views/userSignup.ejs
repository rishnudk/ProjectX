<% layout('layouts/main') %>

<div class="login-container">
    <h2>Create a new account</h2>

    <!-- Display Error Message -->
    <% if (error) { %>
      <p class="text-center" style="color: red;"><%= error %></p>
    <% } %>

    <!-- Display Success Message -->
    <% if (success) { %>
      <p class="text-center" style="color: green;"><%= success %></p>
    <% } %>

    <form action="/register" method="POST">
      <!-- Name Field -->
      <div class="form-group">
        <label for="name">Full Name</label>
        <input type="text" minlength="4" pattern="^[A-Za-z0-9_-]+$" class="form-control" id="name" name="name" placeholder="Enter your full name" required>
      </div>

      <!-- Email Field -->
      <div class="form-group">
        <label for="email">Enter Your Email</label>
        <input type="email" class="form-control" id="email" name="email" placeholder="Enter your email" required>
      </div>

      <!-- Password Field -->
      <div class="form-group">
        <label for="password">Password</label>
        <input type="password" minlength="4" class="form-control" id="password" name="password" placeholder="Enter your password" required>
      </div>

      <!-- Submit Button -->
      <button type="submit" class="btn btn-custom">Create Account</button>
      <a href="/" class="atag">Login your existing account</a>
    </form>
</div>

<script src="/js/signup-validation.js"></script>

